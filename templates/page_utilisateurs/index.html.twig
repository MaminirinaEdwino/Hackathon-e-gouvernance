{% extends 'page_user.html.twig' %}

{% block title %}Page Utilisateur{% endblock %}

{% block body %}


{% if declaration_naissances is defined %}
    {% for declaration_naissance in declaration_naissances %}
        {{ declaration_naissance.nom }}
        {{ declaration_naissance.prenom }}
        {{ declaration_naissance.datenaissance|date('d-m-Y') }}
        {{ declaration_naissance.pere }}
        {{ declaration_naissance.mere }}
        {% if declaration_naissance.confirmer == true %}
            <a
                name=""
                id=""
                class="btn btn-primary"
                href="{{ path('app_declaration_naissance_pdf', {id: declaration_naissance.id}) }}"
