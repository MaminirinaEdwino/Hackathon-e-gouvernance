{% endif %}
{% if certifications is defined %}
    {% for certification in certifications %}
        Demande de legalisation 
        {% if certification.confirmation == true %}
            <a
            name=""
            id=""
            class="btn btn-primary"
            href="{{ asset('/uploads/pdf_site/') ~ certification.legalise }}"
            role="button"
            >Telecharger le document légalisé</a
        >
        {% endif %}
        <br>
    {% endfor %}
{% endif %}
{% if mariages %}
    {% for mariage in mariages %}
        Acte de mariage de {{ mariage.demandeur.nom }}{{ mariage.demandeur.prenom }}
        <a
            name=""
            id=""
            class="btn btn-primary"
            href="{{ path('app_mariage_pdf', {id: mariage.id}) }}"
            role="button"
            >Telecharger le document</a
        >
        
    {% endfor %}
{% endif %}
<a href="{{ path('app_logout') }}">logout<a/>
{% endblock %}
